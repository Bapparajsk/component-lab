{
  "extends": ["next/core-web-vitals", "next/typescript"],
    "rules": {
      "react-hooks/exhaustive-deps": "off", // Disables exhaustive-deps rule
      "@typescript-eslint/no-explicit-any": "off", // Disables no-explicit-any rule
      "semi": ["error", "always"], // Enforces semicolons
      "eol-last": ["error", "always"], // Ensures a newline at the end of files
      "import/order": [
        "error",
        {
          "groups": ["builtin", "external", "internal"],
          "newlines-between": "always" // Enforces newlines between different groups of imports
        }
      ],
      "react/jsx-curly-brace-presence": [
        "error",
        {
          "props": "always",
          "children": "ignore"
        }
      ],
      "react/jsx-boolean-value": ["error", "always"]
    }
}
